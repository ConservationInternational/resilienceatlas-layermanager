{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "L": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "plugins": [
    "react",
    "import"
  ],
  "rules": {
    "no-debugger": "warn",
    "no-eval": ["warn", { "allowIndirect": true }],
    "import/no-extraneous-dependencies": "off",
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "babel-module": {},
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
